@page "/Volume"
@inherits AppComponentBase

<MudCard Elevation="3" Class="h-full">
    <MudCardContent>
        <MudText Typo="Typo.h5" Class="mb-6 font-weight-bold">音量控制</MudText>
        
        <div class="d-flex justify-center mb-8">
            <MudSlider
                @bind-Value="volumeSlider"
                Min="0"
                Max="100"
                Step="1"
                Class="w-75"
            />
        </div>
        
        <div class="d-flex justify-center gap-4 mb-4">
            <MudIconButton
                Icon="@Icons.Material.Filled.VolumeDown"
                Color="Color.Primary"
                Size="Size.Large"
                OnClick="SetVolumeDown"
            />
            
            <MudIconButton
                Icon="@Icons.Material.Filled.VolumeUp"
                Color="Color.Primary"
                Size="Size.Large"
                OnClick="SetVolumeUp"
            />
            <MudIconButton
                Icon="@Icons.Material.Filled.Refresh"
                Color="Color.Primary"
                Size="Size.Large"
                OnClick="ResetVolume"
            />
        </div>
        
        <div class="d-flex justify-center gap-4">
            <MudButton
                Variant="Variant.Outlined"
                Color="Color.Primary"
                OnClick="() => SetVolume(50)"
                Class="px-6"
            >
                50%
            </MudButton>
            
            <MudButton
                Variant="Variant.Outlined"
                Color="Color.Primary"
                OnClick="() => SetVolume(100)"
                Class="px-6"
            >
                100%
            </MudButton>
        </div>
    </MudCardContent>
</MudCard>

@code {
    private int volumeSlider { get; set; } = 70;
    
    private void SetVolumeDown()
    {
        volumeSlider = Math.Max(0, volumeSlider - 10);
    }
    
    private void SetVolumeUp()
    {
        volumeSlider = Math.Min(100, volumeSlider + 10);
    }
    
    private void ResetVolume()
    {
        volumeSlider = 70;
    }
    
    private void SetVolume(int value)
    {
        volumeSlider = value;
    }
}
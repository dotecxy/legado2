@page "/Index"
@inherits AppComponentBase

<div class="page-container">
    <TopCompoent PageTitle="应用首页" />
    
    <MudContainer MaxWidth="MaxWidth.Large" Class="page-content py-4">
            <MudText Typo="Typo.h4" Class="mb-6">应用首页</MudText>
            <MudText>这是Legado应用的首页内容区域。</MudText>
    </MudContainer>
    
    <div class="fixed-bottom-nav">
        <MudPaper Elevation="6">
            <MudStack direction="Direction.Row" Justify="Justify.SpaceAround">
                <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="() => {}">
                    <MudIcon Icon="@Icons.Material.Filled.Home" />
                    <MudText Class="ml-2">首页</MudText>
                </MudButton>
                
                <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="() => {}">
                    <MudIcon Icon="@Icons.Material.Filled.Explore" />
                    <MudText Class="ml-2">发现</MudText>
                </MudButton>
                
                <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="() => {}">
                    <MudIcon Icon="@Icons.Material.Filled.Settings" />
                    <MudText Class="ml-2">设置</MudText>
                </MudButton>
            </MudStack>
        </MudPaper>
    </div>
</div>

<style>
    .page-container {
        display: flex;
        flex-direction: column;
        height: 100%;
        width: 100%;
    }

    .page-content {
        flex: 1;
        overflow-y: auto;
        padding-bottom: 70px;
    }

    .fixed-bottom-nav {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 100;
    }

    @@media (max-width: 600px) {
        .page-content {
            padding: 8px !important;
            padding-bottom: 70px !important;
        }
    }
</style>

